{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "#utils/*": ["lib/utils/*.js"],
      "#lib/*": ["lib/*.js"],
      "#languages": ["languages/index.js"],
      "#root/*": ["*.js"]
    },
    "composite": true
  },
  "include": [".", "./**/*.json"],
  "exclude": ["./tsconfig.json"]
}
